        <ListBox Name="lstbox_Customer" Margin="54,0,0,0" HorizontalAlignment="Left" Width="196" Height="201" VerticalAlignment="Center" SelectionChanged="lstbox_Customer_SelectionChanged"/>
        <Button Name="btn_RetrievePackage" Content="RETRIEVE" HorizontalAlignment="Left" Margin="112,331,0,0" VerticalAlignment="Top" Click="btn_RetrievePackage_Click" Width="80" Height="25"/>
        <Button Name="btn_Back" Content="CANCEL" HorizontalAlignment="Left" Margin="326,331,0,0" VerticalAlignment="Top" Click="btn_Back_Click" Width="80" Height="25"/>
    </Grid>
</Window>
